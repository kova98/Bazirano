@{
    ViewBag.Title = "Bazirano - Vijesti";
}

@model NewsPageViewModel

<div class="p-3"></div>
<div class="row">
    <div class="col-12 col-md-7 col-lg-5">
        <partial name="NewsPostMain" model="@Model" />
        <div class="p-2"></div>
        <div class="d-none d-md-block d-lg-none">
            @foreach (var post in Model.LatestPosts)
            {
                <partial name="NewsPostLatest" model="post" />
                <br />
            }
        </div>
    </div>
    <div class="col-12 col-md-5 col-lg-4">
        <partial name="NewsPostSecondary" model="@Model.SecondaryPost" />
        <br />
        @foreach (var post in Model.PostList)
        {
            <partial name="NewsListPost" model="post" />
            <br />
        }
    </div>
    <div class="col-12 col-md-5 col-lg-3 d-block d-md-none d-lg-block">
        @foreach (var post in Model.LatestPosts)
        {
            <partial name="NewsPostLatest" model="post" />
            <br />
        }
    </div>
</div>
<div class="p-2"></div>

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("[id$=newsNav]").addClass("active");
    });
</script>

