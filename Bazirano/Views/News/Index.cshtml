@model NewsPageViewModel

<nav class="nav navbar-nav p-3"></nav>
<div class="row">
    <div class="col-7 col-lg-5">
        <partial name="NewsPostMain" model="@Model" />
    </div>
    <div class="col-5 col-lg-4">
        <partial name="NewsPostSecondary" model="@Model.SecondaryPost" />
        <br />
        @foreach (var post in Model.PostList)
        {
            <partial name="NewsListPost" model="post" />
            <br />
        }
    </div>
    <div class="col-5 col-lg-3">
        @for (int i = 0; i < 5; i++)
        {
            <div class="row border-secondary border-bottom" style="padding-bottom:20px">
                <div class="col-2">
                    <h4 class="p-0 m-0 btn-link">@(4 + i * 13)</h4>
                    <span class="btn-link">min</span>
                </div>
                <div class="col-10">
                    Malo duzi naslov najnovije vijesti uopalaaaaaa
                </div>
            </div>
            <br />
        }
    </div>
</div>

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("[id$=newsNav]").addClass("active");
    });
</script>

