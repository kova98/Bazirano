@if (ViewData.ContainsKey("Alert.Message"))
{
    <div class="alert @ViewData["Alert.Type"] alert-dismissible fade show" role="alert">
        @if (ViewData.ContainsKey("Alert.Title"))
        {
            <h4 class="alert-heading">@ViewData["Alert.Title"]</h4>
        }
        @if (ViewData.ContainsKey("Alert.Subtitle"))
        {
            <p>
                @ViewData["Alert.Subtitle"]
            </p>
            <hr />
        }
        <p class="mb-0">
            @ViewData["Alert.Message"]
        </p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
