@if (TempData.ContainsKey("Alert.Message"))
{
    <div class="alert bg-@TempData["Alert.Type"] border-@TempData["Alert.Type"] text-dark alert-dismissible fade show" role="alert">
        @if (TempData.ContainsKey("Alert.Title"))
        {
            <h4 class="alert-heading">@TempData["Alert.Title"]</h4>
        }
        @if (TempData.ContainsKey("Alert.Subtitle"))
        {
            <p>
                @TempData["Alert.Subtitle"]
            </p>
            <hr />
        }
        <p class="mb-0">
            @TempData["Alert.Message"]
        </p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
