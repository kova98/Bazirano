@if (ViewData.ContainsKey("Alert.Message"))
{
    <div class="alert @ViewData["Alert.Type"] alert-dismissible fade show" role="alert" style="display:none">
        <div class="">
            @ViewData["Alert.Message"]
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<script>
    window.onload = function () {
        $(".alert").show("slow");
    }
</script>

