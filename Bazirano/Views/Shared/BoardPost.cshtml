@model BoardPost

@{ 
    string time = $"{Model.DatePosted.ToShortDateString()} {Model.DatePosted.ToShortTimeString()}";
    bool containsImage = !string.IsNullOrEmpty(Model.Image);
}

<div class="p-1 m-0">
    <div class="card">
        <div class="card-header">
            <a href="#">
                #@Model.Id | @time
            </a>
        </div>
        <div class="row">
            @if (containsImage)
            {
                <div class="col-4 text-center">
                    <a href="~/images/@Model.Image">
                        <img src="~/images/@Model.Image" class="img-fluid" style="max-height:300px" />
                    </a>
                </div>
            }
            <div class="card-body" style="@(containsImage ? "" : "padding-left:40px")">
                <div>
                    @Model.Text
                </div>
            </div>
        </div>
    </div>
</div>