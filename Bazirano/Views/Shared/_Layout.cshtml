<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" asp-href-include="/lib/bootswatch/darkly/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto&display=swap">
    <link rel="stylesheet" asp-href-include="/style/style.css" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/scripts/main.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <link rel="icon" type="image/png" href="~/images/b.png" />

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand navbar-light bg-transparent border-bottom border-light border-top p-0">
            <a class="navbar-brand bg-secondary p-2" asp-action="Index" asp-controller="Home">
                <h4 class="font-weight-bold p-2 m-0">BAZIRANO</h4>
            </a>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="newsNav" asp-action="Index" asp-controller="News">
                            VIJESTI
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="boardNav" asp-action="Catalog" asp-controller="Board">
                            PLOČA
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="columnNav" asp-action="Index" asp-controller="Column">KOLUMNE</a>
                    </li>
                </ul>
            </div>
        </nav>
        @RenderBody()
    </div>

</body>
</html>



