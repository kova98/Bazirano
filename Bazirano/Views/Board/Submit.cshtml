@{ 
    Layout = "_BoardLayout";
}

@model BoardPost

    <div class="col-lg-7 p-1 m-1">
        <div class="card text-center">
            <div class="card-header">
                <h2>Nova objava</h2>

            </div>
            <div class="card-body">
                <form method="post" asp-action="CreateThread" asp-controller="Board">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div><span asp-validation-for="Text" class="text-danger"></span></div>
                        <textarea class="form-control" asp-for="Text"></textarea>
                    </div>
                    <input type="file" asp-for="Image" />
                    <button class="btn btn-block btn-success" type="submit">Objavi</button>
                </form>
            </div>            
        </div>
    </div>