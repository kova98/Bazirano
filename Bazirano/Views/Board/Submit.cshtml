@{
    ViewBag.Title = "Ploča - Nova objava";
    Layout = "_BoardLayout";
}

@model BoardPost
@inject Microsoft.Extensions.Configuration.IConfiguration config;

<div class="col-lg-7 p-1 m-0">
    <div class="card text-center">
        <div class="card-header">
            <h2>Nova objava</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data"
                  asp-action="CreateThread" asp-controller="Board">
                <div class="form-group">
                    <div class="text-danger">@ViewBag.FileError</div>
                    <div><span asp-validation-for="Text" class="text-danger"></span></div>
                    <textarea class="form-control" asp-for="Text"></textarea>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control-file" id="file_input"
                           asp-for="Image" name="file">
                </div>
                <div class="text-danger">@ViewBag.CaptchaError</div>
                <div class="g-recaptcha" data-sitekey="@config["GoogleReCaptcha:key"]"></div>
                <br />
                <button class="btn btn-block btn-success" type="submit">Objavi</button>
            </form>
        </div>
    </div>
</div>  