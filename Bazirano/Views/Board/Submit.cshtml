@{
    ViewBag.Title = "Nova objava";
    Layout = "_BoardLayout";
}

@model BoardPost
@inject Microsoft.Extensions.Configuration.IConfiguration config;

<div class="col-lg-7 p-0">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Nova objava</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-action="CreateThread" asp-controller="Board">

                <div class="form-group">
                    <textarea class="form-control" asp-for="Text"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                    <div class="text-danger">@ViewBag.FileError</div>
                </div>

                <div class="form-group">
                    <input type="file" class="form-control-file" id="file_input" asp-for="Image" name="file">
                </div>

                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="@config["GoogleReCaptcha:key"]"></div>
                </div>

                <button class="btn btn-block btn-success" type="submit">Objavi</button>
            </form>
        </div>
    </div>
</div>  