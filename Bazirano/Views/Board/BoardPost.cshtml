@model BoardPostViewModel

@{
    string time = Model.Post.DatePosted.ToString("dd.MM.yyyy. HH:mm");
    bool containsImage = !string.IsNullOrEmpty(Model.Post.Image);
}

<div class="p-1 m-0" id="@Model.Post.Id">
    <div class="card">
        <div class="card-header">
            <button class="btn btn-link p-0" onclick="quote(@Model.Post.Id)">
                #@Model.Post.Id | @time
            </button>
        </div>
        <div class="row">
            @if (containsImage)
            {
            <div class="col-12 col-md-4 text-center">
                <a href="~/images/@Model.Post.Image">
                    <img src="~/images/@Model.Post.Image" class="img-fluid" style="max-height:300px" />
                </a>
            </div>
            }
            <div class="col-12 col-md-8 m-3 p-md-3 @(containsImage ? "m-md-0" : "")">
                <post-text text="@Model.Post.Text"></post-text>
            </div>
        </div>
        @await Component.InvokeAsync("PostResponses", Model)
    </div>
</div>