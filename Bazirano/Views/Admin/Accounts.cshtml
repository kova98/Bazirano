@{
    Layout = "_AdminLayout";
}

@model List<IdentityUser>

    <div class="row">
        <div class="col-12 col-lg-6">
            @{ var errors = (IEnumerable<IdentityError>)ViewBag.Errors;}
            @if (errors != null)
            {
                foreach (var error in errors)
                {
                    <p class="text-danger">@error.Description</p>
                }
            }
            <form asp-action="CreateUser" method="post">
                <div class="form-group">
                    <label class="text-white-50">Ime</label>
                    <input name="userName" class="form-control" placeholder="Ime" />
                </div>
                <div class="form-group">
                    <label class="text-white-50">Lozinka</label>
                    <input name="password" type="password" class="form-control" placeholder="Lozinka" />
                </div>
                <button class="btn btn-success" type="submit">Dodaj korisnika</button>
            </form>

            <div class="p-2"></div>
        </div>

        <div class="col-12 col-lg-6">
            <h1>Računi</h1>

            @foreach (var user in Model)
            {
                <div class="card">
                    <div class="card-body" onclick="toggleFooter('@user.UserName')">
                        <h3>@user.UserName</h3>
                        <span class="text-muted">@user.Id</span>
                        <span class="text-muted">@user.Email</span>
                    </div>
                    @{ var id = $"footer{user.UserName}";}
                    <div class="card-footer" id="@id" style="display:none">
                        <a class="btn btn-danger float-right" asp-action="DeleteUser" asp-route-name="@user.UserName">
                            Ukloni
                        </a>
                    </div>
                </div>
                
                <div class="p-1"></div>
            }
        </div>
    </div>

<script>
    function toggleFooter(username) {
        $("#footer" + username).toggle("fast");
    }
</script>
