@{
    ViewBag.Title = $"Bazirano - {Model.Title}";
}

@model ColumnPost

<div class="p-3"></div>
<div class="row">
    <div class="col-12 col-md-8">
        <div class="card">
            <img class="card-img-top img-fluid" src="@Model.Image" />
            <div class="card-body">
                <div class="card-title">
                    <h1>@Model.Title</h1>
                </div>
                <span class="float-right text-muted">@Model.DatePosted.ToString("dd.MM.yyyy.")</span>
                <div class="text-muted">
                    Piše:
                    <a asp-action="Author" asp-controller="Column" asp-route-id="@Model.Author.Id">
                        @Model.Author.Name
                    </a>
                </div>
                
                <hr class="bg-secondary" />
                <p>@Html.Raw(Model.Text)</p>
            </div>
        </div>

        @*<div id="comment">
            <partial name="ArticleAddComment"
                     model="@new ArticleRespondViewModel { ArticleId = Model.Article.Id, Comment = new Comment()}" />
        </div>*@

        @if (Model.Comments.Count > 0)
        {
            <h2 class="border-bottom border-secondary">Komentari</h2>

            @foreach (var comment in Model.Comments)
            {
                <partial name="Comment" model="comment" />
            }

            <div class="p-1 border-bottom border-secondary"></div>
        }
    </div>
</div>
