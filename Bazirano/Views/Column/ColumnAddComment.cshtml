@model ColumnRespondViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration config;

<div class="card">
    <div class="card-header text-dark">
        <h4>Komentiraj</h4>
    </div>
    <div class="card-body">
        <form asp-action="PostComment" asp-controller="Column">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="text-muted">Ime</label>
                <input class="form-control" asp-for="Comment.Username" />
                <label class="text-muted">Komentar</label>
                <textarea class="form-control" asp-for="Comment.Text" id="textbox"></textarea>
                <input class="form-control" hidden asp-for="ColumnId"></input>
            </div>
            <div class="g-recaptcha" data-sitekey="@config["GoogleReCaptcha:key"]"></div>
            <br />
            <button class="btn btn-success" type="submit">Komentiraj</button>
        </form>
    </div>
</div>

