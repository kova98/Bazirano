@{
    ViewBag.Title = "Bazirano";
}

@model HomePageViewModel

<div class="p-3"></div>
<div class="row">
    <div class="col-12 col-md-6">
        <div class="card">
            <div class="text-center d-flex align-items-end">
                <img class="img-fluid position-relative rounded" src="@Model.MainPost.Image">
                <a class="text-white position-absolute p-3"
                   asp-action="Article" asp-controller="News" asp-route-id="@Model.MainPost.Id">
                    <h3 class="text-left" style="text-shadow: black 0.1em 0.1em 0.2em;">
                        @Model.MainPost.Title
                    </h3>
                </a>
            </div>
        </div>
        <div class="p-3"></div>
        <div class="col-12">
            @foreach (var post in Model.PopularPosts)
            {
                <div class="row rounded bg-light">
                    <a class="col-4 p-0 "
                       asp-action="Article" asp-route-id="@post.Id" asp-controller="News">
                        <img class="rounded-left img-fluid" src="@post.Image" />
                    </a>
                    <div class="col-8 card-text p-2">
                        <a class="text-white"
                           asp-action="Article" asp-route-id="@post.Id" asp-controller="News">
                            <h4>@post.Title</h4>
                        </a>
                        <small class="text-muted">@post.DatePosted</small>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="card mb-2">
            @{ var firstColumn = Model.ColumnPosts.First(); }
            <img class="card-img-top" src="@firstColumn.Image" />
            <div class="card-body pb-2">
                <span class="text-muted">@firstColumn.DatePosted.ToEuTimeFormat()</span>
                <span class="text-muted float-right">@firstColumn.Author.Name</span>
                <h3>
                    @firstColumn.Title
                </h3>
            </div>
        </div>
        @foreach (var column in Model.ColumnPosts)
        {
            <div class="card mb-2">
                <div class="container p-0">
                    <div class="row pr-2">
                        <div class="col-4">
                            <img class="img-fluid rounded-left" src="@column.Image" />
                        </div>
                        <div class="col-8 card-body pl-2 py-1">
                            <a asp-action="ColumnPost" asp-controller="Column" asp-route-id="@column.Id" class="text-white">
                                <h4>@column.Title</h4>
                            </a>
                            <a class="text-muted" asp-action="Author" asp-controller="Column" asp-route-id="@column.Author.Id">
                                @column.Author.Name
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-12 border-bottom border-light mb-4"></div>

    <div class="col-12">
        <h1 class="display-4">Ploča</h1>
    </div>

    <div class="card-columns col-12">

        @foreach (var thread in Model.Threads)
        {
            <partial name="BoardThreadPost" model="@thread" />
        }
    </div>
</div>
<div class="p-2"></div>


<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("[id$=homeNav]").addClass("active");
    });
</script>

