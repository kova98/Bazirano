@{
    Layout = "_AuthorInterfaceLayout";
}

@model ColumnRequest


<div class="col-md-4 col-12">
    <form asp-action="SaveColumnRequest" asp-controller="AuthorInterface">
        <div class="form-group">
            <label class="form-text">Naslov</label>
            <input id="title-input" asp-for="ColumnTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-text">Slika</label>
            <input id="image-input" asp-for="ColumnImage" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-text">Tekst</label>
            <textarea rows="15" id="text-input" asp-for="ColumnText" class="form-control"></textarea>
        </div>

        <button class="btn btn-success" type="submit">Sačuvaj</button>

    </form>
</div>

<div class="col-md-8 col-12" id="preview">
    <div class="card">
        <img id="image" class="card-img-top img-fluid" src="@Model.ColumnImage" />
        <div class="card-body">
            <div class="card-title">
                <h1 id="title">@Model.ColumnTitle</h1>
            </div>
            <span class="float-right text-muted">@Model.DateRequested.ToString("dd.MM.yyyy.")</span>
            <div class="text-muted">
                Piše: <span id="author">@Model.Author.Name</span>
            </div>

            <hr class="bg-secondary" />
            <div class="text-body" id="text">@Html.Raw(Model.ColumnText)</div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        refresh();

        $('.form-control').on('input', function (e) {
            refresh();
        });
    });

    function refresh() {
        $("#title").text($("#title-input").val());
        $("#text").html($("#text-input").val());
        $("#image").attr("src", $("#image-input").val());
    }
</script>
