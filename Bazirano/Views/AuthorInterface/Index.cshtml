@{
    Layout = "_AuthorInterfaceLayout";
    ViewBag.ActiveTab = "index";
}

@model AuthorInterfaceIndexViewModel

<div class="col-12">
    <partial name="Alert" />
</div>

<div class="col-lg-4 col-md-6 col-12 text-center">
    <partial name="Profile" model="Model.Author" />
</div>
<div class="col-lg-4 col-md-6 col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="my-0">Zahtjevi</h3>
        </div>
        <div class="card-body pb-0">
            <a asp-action="ColumnRequestsOverview" class="text-white">
                <p>@Model.DraftRequests.Count skice</p>
            </a>
            <a asp-action="ColumnRequestsOverview" class="text-warning">
                <p>@Model.RevisedRequests.Count revidirano</p>
            </a>
            <a asp-action="ColumnRequestsOverview" class="text-warning">
                <p>@Model.PendingRequests.Count čeka odobrenje</p>
            </a>
            <a asp-action="ColumnRequestsOverview" class="text-danger">
                <p>@Model.RejectedRequests.Count odbijeno</p>
            </a>
            <a asp-action="ColumnRequestsOverview" class="text-success">
                <p>@Model.ApprovedRequests.Count odobreno</p>
            </a>
        </div>
    </div>
</div>