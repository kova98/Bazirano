@{
    Layout = "_BasicLayout";
    ViewBag.Title = "Autorsko sučelje";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a asp-action="Index" asp-controller="Home" class="navbar-brand btn-link"><span class="fa fa-home"></span></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a id="index" class="nav-link" asp-action="Index" asp-controller="AuthorInterface">Početna</a>
            </li>
            <li class="nav-item">
                <a id="overview" class="nav-link" asp-action="ColumnRequestsOverview" asp-controller="AuthorInterface">
                    Zahtjevi
                </a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto float-right">
            <li class="nav-item dropdown">
                <a class="nav-link" asp-action="Logout" asp-controller="Account">
                    <span class="fa fa-sign-out-alt"></span> Odjava
                </a>
            </li>
        </ul>
    </div>
</nav>
<div class="p-2"></div>
<div class="row">
    @RenderBody()
</div>

<script>
    $(document).ready(function () {
        $("#@ViewBag.ActiveTab").addClass("active");
    });
</script>
