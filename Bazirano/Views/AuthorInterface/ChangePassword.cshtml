@model ChangePasswordViewModel

<div class="card bg-light">
    <div class="card-header text-primary h3">
        Izmjena lozinke
    </div>
    <div class="card-body">
        <form asp-action="ChangePassword" asp-controller="AuthorInterface" method="post"
              class="text-left">
            <div class="form-group">
                <label class="form-text text-primary"></label>
                <div><span asp-validation-for="CurrentPassword" class="text-danger"></span></div>
                <input asp-for="CurrentPassword" type="password"
                        class="form-control" placeholder="Trenutna lozinka" id="title-input" />
            </div>

            <div class="form-group">
                <div><span asp-validation-for="NewPassword" class="text-danger"></span></div>
                <input asp-for="NewPassword" type="password"
                       class="form-control" id="image-input" placeholder="Nova lozinka"/>
            </div>

            <div class="form-group">
                <label class="form-text text-muted"></label>
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
                <input asp-for="ConfirmPassword" type="password"
                       class="form-control" id="image-input" placeholder="Potvrdi lozinku"/>
            </div>

            <button class="btn btn-success btn-block" type="submit" name="command" value="save">
                <span class="fa fa-save mr-1"></span>
                Spremi
            </button>
        </form>
    </div>
</div>
