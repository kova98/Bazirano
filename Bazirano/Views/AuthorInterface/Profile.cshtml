@model Author

<div class="card mb-3 bg-light text-center">
    <img src="@Model.Image" class="card-img-top" />
    <div class="card-body">
        <h1 class="text-primary">@Model.Name</h1>
        <h3 class="text-muted">@Model.ShortBio</h3>
        <hr class="my-4 bg-secondary" />
        <p>@Model.Bio</p>
    </div>
</div>